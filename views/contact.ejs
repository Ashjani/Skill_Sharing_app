<!-- Contact: Hero  -->
<section class="contact-hero">
  <div class="section-inner contact-hero__inner center">
    <h3 class="contact-title">Get In Touch</h3>
    <p class="muted">
      Have questions about SkillLink? We're here to help you connect with the
      right opportunities and services.
    </p>
  </div>
</section>

<!-- Contact -->
<section class="contact-section">
  <div class="section-inner contact-grid">
    <!-- Left: Contact info -->
    <aside class="card contact-card info-card z-depth-1">
      <div class="card-content">
        <h6 class="card-title">Contact Information</h6>

        <div class="contact-list">
          <div class="contact-item">
            <span
              class="contact-icon indigo lighten-5 indigo-text text-darken-1"
            >
              <i class="material-icons">mail</i>
            </span>
            <div>
              <div class="contact-label">Email</div>
              <div class="muted tiny">hello@skilllink.com</div>
              <div class="muted tiny">support@skilllink.com</div>
            </div>
          </div>

          <div class="contact-item">
            <span class="contact-icon teal lighten-5 teal-text text-darken-1">
              <i class="material-icons">phone</i>
            </span>
            <div>
              <div class="contact-label">Phone</div>
              <div class="muted tiny">+61 (555) 123-4567</div>
              <div class="muted tiny">Mon–Fri 9AM–6PM EST</div>
            </div>
          </div>

          <div class="contact-item">
            <span class="contact-icon green lighten-5 green-text text-darken-1">
              <i class="material-icons">place</i>
            </span>
            <div>
              <div class="contact-label">Office</div>
              <div class="muted tiny">123 Innovation Drive</div>
              <div class="muted tiny">Melbourn, VIC 3000</div>
            </div>
          </div>
        </div>

        <div class="divider" style="margin: 16px 0"></div>

        <div>
          <div class="contact-label" style="margin-bottom: 8px">Follow Us</div>
          <div class="social-row">
            <a href="#!" aria-label="Twitter" class="social-btn"
              ><i class="material-icons">alternate_email</i></a
            >
            <a href="#!" aria-label="LinkedIn" class="social-btn"
              ><i class="material-icons">work</i></a
            >
            <a href="#!" aria-label="YouTube" class="social-btn"
              ><i class="material-icons">ondemand_video</i></a
            >
            <a href="#!" aria-label="GitHub" class="social-btn"
              ><i class="material-icons">code</i></a
            >
          </div>
        </div>
      </div>
    </aside>

    <!-- Right: Form -->
    <div class="card contact-card form-card z-depth-1">
      <div class="card-content">
        <h6 class="card-title">Send us a Message</h6>

        <form action="/contact" method="POST" id="contactForm" novalidate>
          <div class="row">
            <div class="input-field col s12 m6">
              <input
                id="firstName"
                name="firstName"
                type="text"
                class="validate"
              />
              <label for="firstName">First Name</label>
            </div>
            <div class="input-field col s12 m6">
              <input
                id="lastName"
                name="lastName"
                type="text"
                class="validate"
              />
              <label for="lastName">Last Name</label>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12">
              <input id="email" name="email" type="email" class="validate" />
              <label for="email">Email Address</label>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12">
              <input id="phone" name="phone" type="text" class="validate" />
              <label for="phone">Phone Number</label>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12">
              <select id="subject" name="subject">
                <option value="General Inquiry" selected>
                  General Inquiry
                </option>
                <option value="Account Support">Account Support</option>
                <option value="Partnership">Partnership</option>
                <option value="Feedback">Feedback</option>
                <option value="Other">Other</option>
              </select>
              <label for="subject">Subject</label>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12">
              <textarea
                id="message"
                name="message"
                class="materialize-textarea"
                rows="5"
              ></textarea>
              <label for="message">Message</label>
            </div>
          </div>

          <p class="tiny muted">
            <label>
              <input type="checkbox" name="consent" />
              <span
                >I agree to receive communications from SkillLink and understand
                that I can unsubscribe at any time.</span
              >
            </label>
          </p>

          <div class="row" style="margin-top: 10px">
            <div class="col s12">
              <button
                type="submit"
                class="btn indigo darken-1 waves-effect waves-light contact-send-btn"
              >
                Send Message
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<!--  Contact: FAQ  -->
<section class="contact-faq">
  <div class="section-inner">
    <h5 class="center" style="margin-bottom: 8px">
      Frequently Asked Questions
    </h5>
    <p class="center muted small" style="margin-bottom: 18px">
      Quick answers to common questions about SkillLink
    </p>

    <ul class="collapsible faq-list">
      <li class="active">
        <div class="collapsible-header">
          <strong>How does SkillLink work?</strong>
        </div>
        <div class="collapsible-body">
          SkillLink connects professionals with opportunities by matching
          skills, experience, and career goals with relevant positions and
          projects.
        </div>
      </li>
      <li>
        <div class="collapsible-header">
          <strong>Is SkillLink free to use?</strong>
        </div>
        <div class="collapsible-body">
          We offer both free and premium plans. Basic features are available at
          no cost.
        </div>
      </li>
      <li>
        <div class="collapsible-header">
          <strong>How long does it take to get a response?</strong>
        </div>
        <div class="collapsible-body">
          We typically respond to inquiries within 24 hours during business
          days. For urgent matters, please call our support line.
        </div>
      </li>
    </ul>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const selects = document.querySelectorAll("select");
    M.FormSelect.init(selects, {});
    const coll = document.querySelectorAll(".collapsible");
    M.Collapsible.init(coll, {});
  });
</script>
